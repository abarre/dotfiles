[user]
	name = abarre
	email = anthony.barre87@gmail.com
[alias]
	co = checkout
	st = status

	# modify the last commit
	amend = commit --amend

	#show the log for a file
	filelog = log -u

	#show the current changes
	changes = diff --name-status

	#undo the last commit
	undo = reset --soft HEAD^
        currentbranch = "!git branch | grep \"^\\*\" | cut -d \" \" -f 2"
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = ~/.gitignore
	editor = subl
	autocrlf = input
[apply]
	whitespace = nowarn
[push]
	default = tracking
